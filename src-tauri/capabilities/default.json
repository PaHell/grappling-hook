{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "core:window:allow-create",
    "core:window:allow-center",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$RESOURCE/migrations"
        },
        {
          "path": "$RESOURCE/migrations/**"
        }
      ]
    },
    "sql:default",
    "sql:allow-execute",
    "log:default",
    "dialog:default"
  ]
}